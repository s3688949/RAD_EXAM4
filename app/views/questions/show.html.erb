<p id="notice"><%= notice %></p>

<p>
  <strong>Text:</strong>
  <%= @question.text %>
</p>

<p>
  <strong>Description:</strong>
  <%= @question.description %>
</p>

<p>
  <strong>Explaination:</strong>
  
</p>

<form action="/answer" method="post" accept-charset="UTF-8" >

  <% @question.answers.collect(&:text).each_with_index do |questionText, index|%>
    <% if questionText != nil %>
      <input type="radio" id="answer" name="result" value="<%= @question.answers.collect(&:correct)[index] %>" />
      <label for="answer"><%= questionText %></label>
    <% end %>
  <% end %>
    <input name="submit" type="submit">
</form>

<p>
  <strong>Category:</strong>
  <%= @question.category %>
</p>

<p>
  <strong>Difficulty:</strong>
  <%= @question.difficulty %>
</p>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
